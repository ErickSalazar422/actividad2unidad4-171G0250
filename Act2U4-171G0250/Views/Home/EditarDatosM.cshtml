@model Act2U4_171G0250.Models.Maestro
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ Layout = "_Layout"; }

<h1 class="display-4">SISTEMA ACADEMICO</h1>
<h2>Editar datos de maestro</h2>
<form method="post" asp-controller="Home" asp-action="EditarDatosM">
    <input type="hidden" asp-for="Id" /> <br />
    <label>Nombre</label>
    <input type="text" asp-for="Nombre" required /> <br />
    <label>Usuario</label>
    <input type="text" asp-for="Usuario" required /> <br />
    <input type="submit" value="Confirmar cambios" />
    <a href="~/Home/Maestros">
        <input type="button" value="Cancelar edicion" />
    </a>
</form>
<p>
    @Html.ValidationSummary()
</p>